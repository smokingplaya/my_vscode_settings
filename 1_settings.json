// rev 1 settings
// main extensions:
//    better comments (aaron-bond.better-comments)
//    snoword theme (Snoword.theme-snoword)
//    material icon theme (PKief.material-icon-theme)

{
    "git.enableSmartCommit": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "git.confirmSync": false,
    "workbench.colorTheme": "Snoword Dark",
    "window.titleBarStyle": "custom",
    "editor.fontWeight": "500",
    "editor.fontSize": 16,
    "editor.tabSize": 4,
    "window.commandCenter": false,
    "editor.fontFamily": "JetBrains Mono",
    "scm.inputFontFamily": "JetBrains Mono",
    "chat.editor.fontFamily": "JetBrains Mono",
    "debug.console.fontFamily": "JetBrains Mono",
    "editor.codeLensFontFamily": "JetBrains Mono",
    "notebook.output.fontFamily": "JetBrains Mono",
    "markdown.preview.fontFamily": "JetBrains Mono",
    "editor.inlayHints.fontFamily": "JetBrains Mono",
    "terminal.integrated.fontFamily": "Hack Nerd Font Mono",
    "terminal.integrated.fontSize": 16,
    "breadcrumbs.enabled": false,
    "vscord.app.name": "Visual Studio Code",
    "editor.fontLigatures": true,
    "vscord.status.idle.check": false,
    "vscord.status.problems.enabled": false,
    "vscord.status.buttons.button1.enabled": false,
    "vscord.status.buttons.button1.git.active.enabled": false,
    "vscord.status.buttons.button1.git.idle.enabled": false,
    "vscord.status.buttons.button1.git.inactive.enabled": false,
    "liveServer.settings.donotShowInfoMsg": true,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.enabled": false,
    "workbench.statusBar.visible": false,
    "window.menuBarVisibility": "compact",
}
